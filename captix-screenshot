#!/usr/bin/env bash
# CaptiX executable entry point
# This wrapper ensures the process shows as "captix-screenshot" in process lists
# for better identification, while using the Python module structure internally.

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Activate virtual environment if it exists
if [ -f "$SCRIPT_DIR/.venv/bin/activate" ]; then
    source "$SCRIPT_DIR/.venv/bin/activate"
fi

# Change to script directory to ensure relative imports work
cd "$SCRIPT_DIR"

# Execute CaptiX as a Python module, passing all arguments
exec python3 -m captix "$@"
